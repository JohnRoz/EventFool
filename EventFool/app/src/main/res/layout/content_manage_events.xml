<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_manage_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user1.eventfool.ManageEventsActivity"
    tools:showIn="@layout/activity_manage_events"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_event"
        android:textSize="28sp"
        android:textColor="@color/blackBlue"
        android:id="@+id/set_event_id"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_title"
        android:text=""
        android:textSize="22sp"
        android:id="@+id/event_title_ID"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/set_event_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_text"
        android:text=""
        android:textSize="22sp"
        android:id="@+id/event_text_ID"
        android:layout_below="@+id/event_title_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the event's date: "
        android:textSize="22sp"
        android:textColor="@color/blackBlue"
        android:id="@+id/set_date_TextView_ID"
        android:layout_below="@+id/event_text_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="DD/MM/YYYY"
        android:text=""
        android:layout_alignBaseline="@+id/set_date_TextView_ID"
        android:layout_alignBottom="@+id/set_date_TextView_ID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/date_WGT" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the event's time: "
        android:textSize="22sp"
        android:textColor="@color/blackBlue"
        android:id="@+id/set_time_TextView_ID"
        android:layout_below="@+id/set_date_TextView_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="HH:MM"
        android:text=""
        android:layout_alignBaseline="@+id/set_time_TextView_ID"
        android:layout_alignBottom="@+id/set_time_TextView_ID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/time_WGT"/>

</RelativeLayout>
