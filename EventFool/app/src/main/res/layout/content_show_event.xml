<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_show_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user1.eventfool.ShowEventActivity"
    tools:showIn="@layout/activity_show_event">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Title: "
        android:textColor="@color/blackBlue"
        android:textSize="27sp"
        android:id="@+id/showTitle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Text: "
        android:textColor="@color/blackBlue"
        android:textSize="22sp"
        android:id="@+id/showText"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/showTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Date: "
        android:textColor="@color/blackBlue"
        android:textSize="20sp"
        android:id="@+id/showDate"
        android:layout_below="@+id/showText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Time: "
        android:textColor="@color/blackBlue"
        android:textSize="20sp"
        android:id="@+id/showTime"
        android:layout_below="@+id/showDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
